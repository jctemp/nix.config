# ===============================================================
#       DESKTOP HOST SHARED CONFIGURATION
# ===============================================================
{
  # ===============================================================
  #       HARDWARE CONFIGURATION
  # ===============================================================
  diskDevice = "/dev/nvme0n1";
  persistPath = "/persist";
  bootLoader = "systemd"; # systemd or grub

  # ===============================================================
  #       USERS
  # ===============================================================
  primaryUser = "zen";
  administrators = [ "zen" ];

  # ===============================================================
  #       THEME AND UI PREFERENCES
  # ===============================================================
  theme = {
    gtk = "Adwaita-dark";
    helix = "ayu_dark";
    zellij = "ayu_dark";
    ghostty = "ayu";
    starship = true;
  };
}
